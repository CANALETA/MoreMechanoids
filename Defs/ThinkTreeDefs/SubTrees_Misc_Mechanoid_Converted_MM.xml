<?xml version="1.0" encoding="utf-8" ?>
<ThinkTrees>

  <!--============= Main converted mechanoid behavior core ============-->
  
  <ThinkTreeDef>
    <defName>MainConvertedBehaviorCore</defName>
    <thinkRoot Class="ThinkNode_Tagger">
      <tagToGive>SatisfyingNeeds</tagToGive> <!-- note that JobGiver_Work will assign its own tag -->
      <subNodes>
        <li Class="ThinkNode_PrioritySorter">
          <subNodes>
			<li Class="MoreMechanoids.ThinkNode_ConditionalStayHome">
				<subNodes>
					<li Class="MoreMechanoids.JobGiver_Standby">
						<maxDanger>None</maxDanger>
					</li>
				</subNodes>
			</li>
			<li Class="JobGiver_Work"/>
          </subNodes>
        </li>
      </subNodes>
    </thinkRoot>
  </ThinkTreeDef>

</ThinkTrees>